header(headroom, tolerance='0' offset='0' scroller=".app-view" classes="{pinned:'pinned',unpinned:'unpinned',initial:'headroom'}")
  nav.navbar.navbar-inverse(role="navigation", ng-controller='HeaderCtrl')
    .container
      .navbar-header
        i.fa.fa-chevron-left(ng-show="$state.current.name != 'list'", style='float:left;color:white;margin-top:2%;')
        a.navbar-brand(href='/', ui-sref="list" ng-show="$state.current.name != 'list'", style='margin:auto;') Back
        a.navbar-brand(href='/', ui-sref="list" ng-show="$state.current.name === 'list'") Wooepa
        button.navbar-toggle(type='button', ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
          span.sr-only
            | Toggle navigation
          i.fa.fa-bars
        a.navbar-brand(href='/', ui-sref="in_promotion", style='margin-left:10%;') Events in Promotion
        a.navbar-brand(href='/user={{$root.user.facebook.id}}', ng-show="$root.user", style='margin-left:30%;margin-right:7%;') My Events

        ul.nav.navbar-nav.navbar-right
          li.dropdown(ng-if='$root.user', ng-cloak)
            a.dropdown-toggle(href='#')
              span.avatar.pull-right
                img.img-circle(src='{{ $root.user.facebook.picture }}', alt='{{ $root.user.facebook.name }}')
              span.hidden-xs.hidden-sm.hidden-md {{$root.user.facebook.name}}
              i.fa.fa-chevron-down
            ul.dropdown-menu
              li
                a(ui-sref='app.page.profile', href='/me/events') My events
              li.divider
              li
                a(href="/auth/signout", target='_self' translate) Logout
                  i.fa.fa-sign-out
          li(ng-if='!$root.user', ng-cloak)
            a.login(ng-href="/auth/facebook?redirectUrl={{$root.location.path() | encodeUri}}?{{$root.stateParams | encodeUri}}", translate) Login