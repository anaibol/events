header(headroom, tolerance='0' offset='0' scroller=".app-view" classes="{pinned:'pinned',unpinned:'unpinned',initial:'headroom'}")
  nav.navbar.navbar-inverse(role="navigation", ng-controller='HeaderCtrl')
    .container
      .navbar-header
        a.navbar-brand(href='/', ui-sref="list") Wooepa

        button.navbar-toggle(type='button', ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
          span.sr-only
            | Toggle navigation
          i.fa.fa-bars


        ul.nav.navbar-nav.navbar-right
          li.dropdown(ng-if='$root.user', ng-cloak)
            a.dropdown-toggle(href='#')
              span.avatar.pull-right
                img.img-circle(src='{{ $root.user.facebook.picture }}', alt='{{ $root.user.facebook.name }}')
              span.hidden-xs.hidden-sm.hidden-md {{$root.user.facebook.name}}
              i.fa.fa-chevron-down
            ul.dropdown-menu
              li
                a(ui-sref='app.page.profile', href='/me/events') My events
              li.divider
              li
                a(href="/auth/signout", target='_self' translate) Logout
                  i.fa.fa-sign-out
          li(ng-if='!$root.user', ng-cloak)
            a.login(href='/auth/facebook', target='_self' translate) Login

          //- button.navbar-toggle(type='button', ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
          //-   span.sr-only
          //-     | Toggle navigation
          //-   i.fa.fa-bars


    .navbar-collapse.collapse(ng-class="{'in':!navCollapsed}")
      ul.nav.navbar-nav.visible-xs
        li.search
          form.navbar-form
            //- form(role='form')
            //-   input.form-control(type='search', placeholder='Search...')
            //-   button.btn
            //-     i.fa.fa-search
            .form-control-wrapper
              i.fa.fa-search
              input.form-control.col-lg-8(type="text", placeholder="Type a city or location", typeahead="address.formatted_address for address in getLocation($viewValue)" typeahead-on-select="onSelect($item, $model, $label)", ng-model="locationSelected", ng-controller="LocationpickerCtrl")

        li.sort
          a(href='#', ng-click='isCollapsed = !isCollapsed')
            i.fa.fa-bar-chart-o
            | Sort by
            i.pull-right.fa(ng-class="{'fa-chevron-right': isCollapsed, 'fa-chevron-down': !isCollapsed}")
          ul.nav.nav-collapse(collapse='isCollapsed')
            li
              a(href='#', ui-sref="list({sortBy: 'proximity'})")
                i.fa.fa-map-marker 
                | Proximity
            li
              a(href='#', ui-sref="list({sortBy: 'popularity'})")
                i.fa.fa-group 
                | Popularity
            li
              a(href='#', ui-sref="list({sortBy: ''})")
                i.fa.fa-calendar
                | Date

        li.today
          a(href='#')
            i.fa.fa-calendar
            | Today

        li(ng-if="today.getTime() === Date.sun().getTime()")
          a(href='#')
            i.fa.fa-calendar
            | This weekend

        li(ng-if="today.getTime() !== Date.sun().getTime()")
          a(href='#')
            i.fa.fa-calendar
            | Next weekend

        li.datepicker
          input(type="date", ng-change="$state.go('list', {since: getStringDate(date)})", ng-model="date")

        li.tags
          | Explore by category
          .tag-list
            a.tag(ng-repeat="tag in tags" class="{{tag}}", ui-sref="list({tags: [tag]})") {{tag}}