header
  nav.navbar-inverse(role="navigation", ng-controller='HeaderCtrl')
    .container
      .navbar-header
        a.navbar-brand(href='/', ui-sref="list") W!
          i.fa.fa-tag
        button.navbar-toggle(type='button', ng-click="$root.menuOpen = !$root.menuOpen")
          span.sr-only
            | Toggle navigation
          i.fa.fa-bars

        form.navbar-form.city
          .form-control-wrapper
            i.fa.fa-search
            input.form-control.col-lg-8(type="text", typeahead="address.formatted_address for address in getLocation($viewValue)" typeahead-on-select="onSelect($item, $model, $label)", ng-model="$root.city", ng-controller="LocationpickerCtrl")
            //- placeholder="Type a city or location", 
            span.material-input

        ul.nav.navbar-nav.navbar-right
          li.dropdown(ng-if='$root.user')
            a.dropdown-toggle(href='#')
              span.avatar.pull-right
                img.img-circle(src='{{ $root.user.facebook.picture }}', alt='{{ $root.user.facebook.name }}')
              span.hidden-xs.hidden-sm.hidden-md {{$root.user.facebook.name}}
              i.fa.fa-chevron-down
            ul.dropdown-menu
              li
                a(ui-sref='app.page.profile', href='/me/events') My events
              li.divider
              li
                a(href="/auth/signout", target='_self' translate) Logout
                  i.fa.fa-sign-out
          li(ng-if='!$root.user')
            a.login(ng-href="/auth/facebook?redirectUrl={{$root.location.path() | encodeUri}}?{{$root.stateParams | encodeUri}}", translate) Login