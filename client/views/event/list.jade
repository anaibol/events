section#list(infinite-scroll="getMore()", infinite-scroll-distance="1", infinite-scroll-immediate-check="false", ng-show="$state.current.name === 'list'")

  include mobile-bar
  include sidebar

  .events.col-xs-12.col-sm-9.col-md-9.col-lg-10
    .events-wrapper.col-xs-12.col-sm-6.col-md-4.col-lg-3(ng-repeat="ev in events track by ev.eid", id="{{$index}}", isotope, ui-sref="list.view({slug: ev.slug, eid: ev.eid})")
      //- (adaptative-background)
      .event
        .top
          .background
          a(ui-sref="list.view({slug: ev.slug, eid: ev.eid})").title.truncate {{ev.name}}
          .tag-list
            span.tag(ng-repeat="tag in ev.tags", ng-if="$index < 3", class="{{tag}}", ng-click="openTag($event, ev)") {{tag}}
        .image-container
          .image
            .ribbon-wrapper-green(ng-if="ev.price.num === 0")
              .ribbon-green {{ev.price.full}}
            img(ng-src="{{ev.pic_cover.source}}")
        .bottom
          span.datetime
            span.date
              //- i.fa.fa-clock-o
              //- span {{ev.start_time2 | amCalendar}}
              i.fa.fa-clock-o
              span {{ev.start_time2 | amCalendar:'D MMM'}} 
             // i.fa.fa-clock-o
             // span {{ev.start_time2 | amDateFormat:"LT"}}

          .attending.pull-right(ng-if="ev.attending_count > 0", ev.attending_count="ev.attending_count")
            i.fa.fa-group
            span {{ev.attending_count}}
          .place-info
            .user.price.pull-right(ng-if="ev.price"){{ev.price.full}}
            .span.place(ng-click="openMap($event, ev)", ng-if="ev.location")
              i.fa.fa-map-marker
              span.location {{' ' + ev.location | characters:20}}{{ev.location && ev.venue.city ? ', ' + ev.venue.city : ''}}
        .box-shadow

ui-view