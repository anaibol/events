section#sidebar.hidden-xs.col-sm-3.col-md-3.col-lg-2(ng-controller="SidebarCtrl")
  ul.nav.navbar-nav.row
    li.search
      form.navbar-form
        //- form(role='form')
        //-   input.form-control(type='search', placeholder='Search...')
        //-   button.btn
        //-     i.fa.fa-search
        .form-control-wrapper
          i.fa.fa-search
          input.form-control.col-lg-8(type="text", placeholder="Type a city or location", typeahead="address.formatted_address for address in getLocation($viewValue)" typeahead-on-select="onSelect($item, $model, $label)", ng-model="locationSelected", ng-controller="LocationpickerCtrl")
          span.material-input
    li.sort
      a(href='#', ng-click='isCollapsed = !isCollapsed')
        i.fa.fa-bar-chart-o
        | Sort by
        i.pull-right.fa(ng-class="{'fa-chevron-right': isCollapsed, 'fa-chevron-down': !isCollapsed}")
      ul.nav.nav-collapse(collapse='isCollapsed')
        li
          a(href='#', ui-sref="list({sortBy: 'proximity'})")
            i.fa.fa-map-marker 
            | Proximity
        li
          a(href='#', ui-sref="list({sortBy: 'popularity'})")
            i.fa.fa-group 
            | Popularity
        li
          a(href='#', ui-sref="list({sortBy: ''})")
            i.fa.fa-calendar
            | Date

    li.today
      a(ui-sref="list({since:getStringDate(today)})")
        i.fa.fa-calendar
        | Today

    li(ng-if="today.getDay() >= 5 || today.getDat === 0")
      a(ui-sref="list({since:getStringDate(today)})")
        i.fa.fa-calendar
        | This weekend

    li(ng-if="today.getDay() < 5 && today.getDay > 0")
      a(ui-sref="list({since:getNextDay('Friday')})")
        i.fa.fa-calendar
        | Next weekend

    li.datepicker
      datepicker(ng-change="$state.go('list', {since: getStringDate(date)})", ng-model="date", show-weeks="false")

    li.tags
      | Explore by category
      .tag-list
        a.tag(ng-repeat="tag in tags" class="{{tag}}", ui-sref="list({tags: [tag]})") {{tag}}


