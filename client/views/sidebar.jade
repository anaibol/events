ul.nav.nav-sidebar
  form.navbar-form(role='search', ng-controller="LocationpickerCtrl", ng-submit="open($event)")
    .input-group
      input.form-control(type="text", placeholder="Type a city or location", typeahead="address for address in getLocation($viewValue)" typeahead-loading="loadingLocations", typeahead-on-select="$root.changeLocation($scope.locationSelected)", ng-model="$rootScope.location")
      .input-group-btn
        button.btn.btn-default(type='submit')
          i.fa.fa-map-marker

  li(ng-controller="DatepickerCtrl", ng-click="open($event)")
    //- datepicker(ng-change="$state.go('list', {date: date, tag: $root.tag})", ng-model="date", show-weeks="false")
    datepicker.datepicker(ng-change="$state.go('list', {tag: $root.tag, city: $root.city, date: date.getTime()})", ng-model="date", show-weeks="false")
    div(style='display: inline-block; min-height: 290px;')
        datepicker.well.well-sm(ng-model='dt', min-date='minDate', show-weeks='true')

