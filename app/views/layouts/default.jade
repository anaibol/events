doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
  include ../includes/head
  body(ng-controller='mapCtrl')
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header        
          a.navbar-brand(href='#!') Wooeva
        .navbar-collapse.collapse(collapse='isCollapsed')
          ul.nav.navbar-nav
            li.active
              a(href='#')
                i.glyphicon.glyphicon-home.icon-white
                | Home
          ul.nav.navbar-nav.navbar-right
            li#menuLogin.dropdown
              a#navLogin.dropdown-toggle(href='#', data-toggle='dropdown') Login
              .dropdown-menu
                form#formLogin.form
                  input#username.form-control(name='username', placeholder='Username', type='text')
                  input#password.form-control(name='password', placeholder='Password', type='password')
                  br
                  button#btnLogin.btn.btn-default(type='button') Login
          ul.nav.pull-right.navbar-nav.navbar-default(ng-show='global.authenticated')
            li.dropdown
              a.dropdown-toggle(href='#', toggle='dropdown')
                | {{global.user.name}}
                b.caret
              ul.dropdown-menu
                li
                  a(href='/signout') Signout

    //- leaflet#map(center='pos', layers='layers', markers='markers', height='100%', width='100%')
    .content
      block content
    
    include ../includes/foot