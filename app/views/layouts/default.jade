doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
  include ../includes/head
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation", ng-controller='HeaderCtrl')
      .container
        .navbar-header        
          a.navbar-brand(href='/') Wooepa

          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar

        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/today')
                i.glyphicon.glyphicon-calendar
                | Today
            li
              a(href='/weekend')
                i.glyphicon.glyphicon-calendar
                | Weekend

            li(ng-controller='DatepickerCtrl', ng-click='open($event)')
              a(href='#!', datepicker-popup='dd-MMMM-yyyy', ng-change='changeDate(date)', ng-model='date', min='minDate', datepicker-options='dateOptions', is-open='opened')
                i.fui-calendar-solid(ng-click='open($event)')
                | {{date | date:'dd MMMM'}}
                
            li
              a(href='/free')
                i.glyphicon.glyphicon-usd
                | Free
            li
              a(href='/popular')
                i.glyphicon.glyphicon-heart
                | Popular
            li
              a(href='/festival')
                i.glyphicon.glyphicon-star
                | Festival
            li
              a(href='/worldwide')
                i.glyphicon.glyphicon-globe
                | World
            li(ng-show='global.authenticated')
              a(ng-click='newEvent()')
                i.fui-plus
                | Submit an event
                
          ul.nav.navbar-nav.navbar-right(ng-show='!global.authenticated')
            li
              a(href='/auth/facebook', target='_self')
                i.glyphicon.glyphicon-user
                | Login

          ul.nav.navbar-nav.navbar-right(ng-show='global.authenticated')
            li.dropdown
              a.dropdown-toggle(href='#', toggle='dropdown')
                {{ global.user.facebook.first_name }}
                b.caret
              ul.dropdown-menu
                li
                  a(href='/me/events', target='_self') My events
                li
                  a(href='/auth/signout', target='_self') Logout

    //- leaflet#map(center='pos', layers='layers', markers='markers', height='100%', width='100%')
    .content#top
      .container
        block content
    
      footer
        ul
          li
          li
            | Contact
          li
            | Privacy policy
        .container
          .logo(href='/')
            span.title Wooepa
            span.subtitle Where she's going?


    include ../includes/foot