doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
  include ../includes/head
  body(ng-controller='mapCtrl')
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header        
          a.navbar-brand(href='#!') Wooeva
        .navbar-collapse.collapse(collapse='isCollapsed')
          ul.nav.navbar-nav
            li.active
              a(href='#!')
                i.glyphicon.glyphicon-home.icon-white Home
            li
              a(ng-click='newEvent()')
                i.glyphicon.glyphicon-plus.icon-white New event
                
          ul.nav.navbar-nav.navbar-right.navbar-default(ng-show='!global.authenticated')
            li#menuLogin.dropdown
              a#navLogin.dropdown-toggle(href='#', data-toggle='dropdown') Login
              .dropdown-menu
                a.btn.btn-info(href="/auth/facebook") Login with Facebook
