doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
  include ../includes/head
  body(ng-controller='mapCtrl')
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation", ng-controller='HeaderCtrl')
      .container-fluid
          .navbar-header
            button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#!') Wooeva
          .navbar-collapse.bs-js-navbar-collapse(collapse='isCollapsed')
            ul.nav.navbar-nav
              li.dropdown
                a#drop1.dropdown-toggle(href='#', role='button', toggle='dropdown')
                  | Dropdown
                  b.caret
                ul.dropdown-menu(role='menu', aria-labelledby='drop1')
                  li(role='presentation')
                    a(role='menuitem', tabindex='-1', href='http://twitter.com/fat') Action
                  li(role='presentation')
                    a(role='menuitem', tabindex='-1', href='http://twitter.com/fat') Another action
                  li(role='presentation')
                    a(role='menuitem', tabindex='-1', href='http://twitter.com/fat') Something else here
                  li.divider(role='presentation')
                  li(role='presentation')
                    a(role='menuitem', tabindex='-1', href='http://twitter.com/fat') Separated link
            ul.nav.navbar-nav.navbar-right(ng-hide='global.authenticated')
              li
                a(href='signup') Signup
              li.divider-vertical
              li
                a(href='signin') Signin
            ul.nav.navbar-nav.navbar-right(ng-show='global.authenticated')
              li.dropdown
                a.dropdown-toggle(href='#', toggle='dropdown')
                  | {{global.user.name}}
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/signout') Signout

    //- leaflet#map(center='pos', layers='layers', markers='markers', height='100%', width='100%')
    .content
      block content
    
    include ../includes/foot