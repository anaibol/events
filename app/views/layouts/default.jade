                //-form.form
                //-input.form-control(name='username', placeholder='Username', type='text')
                //-input.form-control(name='password', placeholder='Password', type='password')
                //-br
                //-button.btn.btn-default(type='button') Login
          ul.nav.pull-right.navbar-nav.navbar-default(ng-show='global.authenticated')
            li.dropdown
              a.dropdown-toggle(href='#', toggle='dropdown') {{global.user.name}}
                b.caret
              ul.dropdown-menu
                li
                  a(href='/signout') Signout

