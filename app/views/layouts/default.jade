doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
  include ../includes/head
  body(ng-controller='mapCtrl')
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header        
          a.navbar-brand(href='#!') Wooeva
        .navbar-collapse.collapse(collapse='isCollapsed')
          ul.nav.navbar-nav
            li.active
              a(href='#!')
                i.glyphicon.glyphicon-home
                | Home
            li
              a(ng-click='newEvent()')
                i.fui-plus
                | New event
                
          ul.nav.navbar-nav.navbar-right.navbar-inverse(ng-show='!global.authenticated')
            li
              a(href='/auth/facebook')
                i.glyphicon.glyphicon-user
                | Login

          ul.nav.pull-right.navbar-nav.navbar-inverse(ng-show='global.authenticated')
            li.dropdown
              a.dropdown-toggle(href='#', toggle='dropdown', ng-binding='global.user.name')
                b.caret
              ul.dropdown-menu
                li
                  a(href='/signout') Signout

    //- leaflet#map(center='pos', layers='layers', markers='markers', height='100%', width='100%')
    .content
      block content
    
    include ../includes/foot